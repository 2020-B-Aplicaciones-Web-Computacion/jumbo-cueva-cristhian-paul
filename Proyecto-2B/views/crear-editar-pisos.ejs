<body>
<div class="contenedor2">
    <div class="contenedor">


        <% const userName = usuario %>
        <% const EdificioId = idEdificio %>


        <% if(userName !== undefined){ %>
            <% const existePiso = typeof piso != 'undefined'%>
            <% let existeNombre = typeof nombre !== 'undefined' %>
            <% let existeDescripcion = typeof descripcion !== 'undefined' %>
            <% let existeN_departamentos = typeof n_departamentos !== 'undefined' %>
            <% let existePasillo = typeof pasillo !== 'undefined' %>
            <h1> <%= existePiso ? 'Editar' : 'Crear'%> Piso</h1>
            <% let href = existePiso ? "../editarDesdeVista/"+piso.id : `../piso/crearDesdeVista`%>
            <%if(existePiso){%>
                <% existeNombre = true %>
                <% existeDescripcion = true %>
                <% existeN_departamentos = true %>
                <% existePasillo = true %>
                <% nombre = piso.nombre %>
                <% descripcion = piso.descripcion %>
                <% n_departamentos = piso.n_departamentos %>
                <% pasillo = piso.pasillo %>
            <%}%>

            <% if(error !== undefined) {%>
                <p>MENSAJE ERROR: <%= error%></p>

            <% }%>

            <form action="<%= href%>" method="POST">
                <label for="nombrePais">Nombre:</label>
                <input id="nombrePais" type="text" name="nombre" value="<%= existeNombre ? nombre : '' %>">
                <br>
                <label for="descripcionPais">Descripcion:</label>
                <input id="descripcionPais" type="text" name="descripcion" value="<%= existeDescripcion ? descripcion : '' %>">
                <br>
                <label for="n_departamentosPais">NÂ° departamentos:</label>
                <input id="n_departamentosPais" type="text" name="n_departamentos" value="<%= existeN_departamentos ? n_departamentos : '' %>">
                <br>
                <label for="pasilloPais">Pasillo:</label>
                <input id="pasilloPais" type="text" name="pasillo" value="<%= existePasillo ? pasillo : '' %>">
                <br>
                <button type="submit"><%=existePiso ? "editar" : "crear" %></button>
            </form>

            <form action="../">
                <button type="submit">Cancelar</button></form>
        <% } else {%>
            <h1>primero, inicie sesion.</h1>
        <% } %>
